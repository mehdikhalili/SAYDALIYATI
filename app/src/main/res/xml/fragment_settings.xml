<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:key="notifications_category"
        app:title="Notifications">

        <SwitchPreferenceCompat
            app:key="notification_weekend"
            app:title="La garde par week-end"/>

        <SwitchPreferenceCompat
            app:key="notification_day"
            app:title="La garde par jour"/>

    </PreferenceCategory>

    <PreferenceCategory
        app:key="help_category"
        app:title="Help">

        <Preference
            app:key="feedback"
            app:summary="Signaler des problèmes techniques ou suggérer de nouvelles fonctionnalités"
            app:title="Envoyez un feedback"/>

    </PreferenceCategory>

</PreferenceScreen>